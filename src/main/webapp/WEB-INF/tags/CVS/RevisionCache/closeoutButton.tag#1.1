<%@tag description="put the tag description here" pageEncoding="US-ASCII"%>
<%@taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<%@taglib prefix="sql" uri="http://java.sun.com/jsp/jstl/sql" %>

<%-- The list of normal or fragment attributes can be specified here: --%>
<%@attribute name="activityId" required="true"%>

<sql:query var="activity" dataSource="jdbc/rd-lsst-cam">
    select * from Activity where id=?
    <sql:param value="${activityId}"/>
</sql:query>

<sql:query var="stepsRemaining" dataSource="jdbc/rd-lsst-cam">
    select (
        (select count(*) from ProcessEdge PE, Activity A where PE.parent=A.processId and A.id=?) 
        -
        (select count(*) from Activity where parentActivityId=? and end is not null) 
    ) stepsRemaining from dual;
    <sql:param value="${activityId}"/>
    <sql:param value="${activityId}"/>
</sql:query>

<c:choose>
    <c:when test="${empty activity.rows[0]['end']}">
        <c:choose>
            <c:when test="${stepsRemaining.rows[0]['stepsRemaining']==0}">
                <form METHOD=GET ACTION="closeoutActivity.jsp">
                    <input type="hidden" name="activityId" value="${activityId}">       
                    <INPUT TYPE=SUBMIT value="Closeout">
                </form>
            </c:when>
            <c:otherwise>
                <a href="displayActivity.jsp?activityId=${activityId}">Needs work</a>
            </c:otherwise>
        </c:choose>
    </c:when>
    <c:otherwise>
        Closed out at ${activity.rows[0]['end']} by <c:out value="${activity.rows[0]['closedBy']}"/>
    </c:otherwise>
</c:choose>