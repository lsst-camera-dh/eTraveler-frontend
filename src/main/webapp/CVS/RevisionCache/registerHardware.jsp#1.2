<%@page contentType="text/html" pageEncoding="US-ASCII"%>
<%@taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<%@taglib prefix="sql" uri="http://java.sun.com/jsp/jstl/sql" %>
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=US-ASCII">
        <title>JSP Page</title>
    </head>
    <body>
        <%
            String typeId = request.getParameter("typeId");
            String authId = request.getParameter("authId");
            String identifier = request.getParameter("identifier");
        %>
        <sql:transaction dataSource="jdbc/rd-lsst-cam">
            <sql:update>
                insert into Hardware 
                (id, TypeId, createdBy, creationTS)
                values (NULL, <%=typeId%>, "${userName}", NOW())
            </sql:update>
            <sql:query var="Hardware">
                select * from Hardware where id=LAST_INSERT_ID()                
            </sql:query>
            <sql:update>
                insert into HardwareIdentifier
                (id, authorityId, hardwareId, identifier, createdBy, creationTS)
                values (NULL, <%=authId%>, LAST_INSERT_ID(), '<%=identifier%>', "${userName}", NOW())
            </sql:update>
        </sql:transaction>
        <c:redirect url="displayHardware.jsp">
            <c:param name="id" value="${Hardware.rows[0]['id']}"/>
        </c:redirect>
    </body>
</html>
