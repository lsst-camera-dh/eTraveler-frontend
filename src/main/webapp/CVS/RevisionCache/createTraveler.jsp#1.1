<%@page contentType="text/html" pageEncoding="US-ASCII"%>
<%@taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<%@taglib prefix="sql" uri="http://java.sun.com/jsp/jstl/sql" %>
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=US-ASCII">
        <title>Create Traveler</title>
    </head>
    <body>
        <%
            String idAuth = request.getParameter("idAuth");
            String identifier = request.getParameter("identifier");
            String inNCR = request.getParameter("inNCR");
            String processId = request.getParameter("processId");
            String typeId = request.getParameter("typeId");
        %>
        <c:out value="<%=idAuth%>"/>
        <c:out value="<%=identifier%>"/>
        <c:out value="<%=inNCR%>"/>
        <c:out value="<%=processId%>"/>
        <c:out value="<%=typeId%>"/>
        <sql:transaction dataSource="jdbc/rd-lsst-cam">
            <sql:update>
                insert into Hardware 
                (id,    TypeId,         createdBy,      creationTS)
                values 
                (NULL,  <%=typeId%>,    "${userName}",  NOW())
            </sql:update>
            <sql:update>
                insert into HardwareIdentifier
                (id,    authorityId, hardwareId,        identifier,         createdBy,      creationTS)
                values 
                (NULL,  <%=idAuth%>, LAST_INSERT_ID(),  "<%=identifier%>",  "${userName}",  NOW())
            </sql:update>
            <sql:update>
                insert into Activity 
                (id,    hardwareId1,        hardwareId2,    processId,      processEdgeId,  begin,  end,    inNCR,          createdBy,      creationTS)
                values 
                (NULL,  LAST_INSERT_ID(),   NULL,           <%=processId%>, NULL,           NOW(),  NULL,   "<%=inNCR%>",   "${userName}",  NOW())
            </sql:update>
            <sql:query var="activity">
                select * from Activity where id=LAST_INSERT_ID()                
            </sql:query>
        </sql:transaction>
        <c:redirect url="displayActivity.jsp">
            <c:param name="activityId" value="${activity.rows[0]['id']}"/>
        </c:redirect>
    </body>
</html>
