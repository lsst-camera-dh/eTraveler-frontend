<%@page contentType="text/html" pageEncoding="US-ASCII"%>
<%@taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<%@taglib prefix="sql" uri="http://java.sun.com/jsp/jstl/sql" %>
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=US-ASCII">
        <title>Create Traveler</title>
    </head>
    <body>
        <sql:transaction dataSource="jdbc/rd-lsst-cam">
            <sql:update>
                insert into Hardware 
                (id,   TypeId, createdBy, creationTS) values 
                (NULL, ?,      ?,         NOW())
                <sql:param value="${param['typeId']}"/>
                <sql:param value="${userName}"/>
            </sql:update>
            <sql:query var="hardware">
                select * from Hardware where id=LAST_INSERT_ID();
            </sql:query>
            <sql:update>
                insert into HardwareIdentifier
                (id,   authorityId, hardwareId, hardwareTypeId, identifier, createdBy, creationTS) values 
                (NULL, ?,           ?,          ?,              ?,          ?,         NOW())
                <sql:param value="${param['idAuth']}"/>
                <sql:param value="${hardware.rows[0]['id']}"/>
                <sql:param value="${hardware.rows[0]['TypeId']}"/>
                <sql:param value="${param['identifier']}"/>
                <sql:param value="${userName}"/>
            </sql:update>
            <sql:update>
                insert into Activity 
                (id,   hardwareId, hardwareRelationshipId, processId, processEdgeId, begin, end,  inNCR, createdBy, closedBy, creationTS) values 
                (NULL, ?,          NULL,                   ?,         NULL,          NOW(), NULL, ?,     ?,         NULL,     NOW())
                <sql:param value="${hardware.rows[0]['id']}"/>
                <sql:param value="${param['processId']}"/>
                <sql:param value="${param['inNCR']}"/>
                <sql:param value="${userName}"/>
            </sql:update>
            <sql:query var="activity">
                select * from Activity where id=LAST_INSERT_ID()                
            </sql:query>
        </sql:transaction>
        <c:redirect url="displayActivity.jsp">
            <c:param name="activityId" value="${activity.rows[0]['id']}"/>
        </c:redirect>
    </body>
</html>
