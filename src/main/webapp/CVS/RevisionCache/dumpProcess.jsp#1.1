<%@page contentType="text/html" pageEncoding="US-ASCII"%>
<%@taglib prefix="sql" uri="http://java.sun.com/jsp/jstl/sql" %>
<%@taglib prefix="display" uri="http://displaytag.sf.net" %>
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=US-ASCII">
        <title>Process Dump</title>
    </head>
    <body>
        <%
            String processId = request.getParameter("processId");
        %>
        <sql:query var="process" dataSource="jdbc/rd-lsst-cam">
            select * from Process where id=<%=processId%>
        </sql:query>
        <display:table name="${process.rows}" class="datatable">
        </display:table>
        <sql:query var="hardwareType" dataSource="jdbc/rd-lsst-cam">
            select * from HardwareType where id=${process.rows[0]['hardwareTypeId']}
        </sql:query>
        <display:table name="${hardwareType.rows}" class="datatable">
        </display:table>
    </body>
</html>
