<%@page contentType="text/html" pageEncoding="US-ASCII"%>
<%@taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<%@taglib prefix="sql" uri="http://java.sun.com/jsp/jstl/sql" %>
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=US-ASCII">
        <title>JSP Page</title>
    </head>
    <body>
        <sql:query var="process" dataSource="jdbc/rd-lsst-cam">
            select * from Process where id=?
            <sql:param value="${param['processId']}"/>
        </sql:query>
        <sql:transaction dataSource="jdbc/rd-lsst-cam">
            <c:if test="${! empty param['componentId']}">
                <sql:update>
                    insert into HardwareRelationship
                    (id,   hardwareId, componentId, begin, end,  hardwareRelationshipTypeId, createdBy,     creationTS)
                    values
                    (null, ?,          ?,           null,  null, ?,                          ?,             NOW());
                    <sql:param value="${param['hardwareId']}"/>
                    <sql:param value="${param['componentId']}"/>
                    <sql:param value="${process.rows[0]['hardwareRelationshipTypeId']}"/>
                    <sql:param value="${userName}"/>
                </sql:update>
                <sql:query var="relationship">
                    select * from HardwareRelationship where id=LAST_INSERT_ID();
                </sql:query>
                <c:set var="relationShipId" value="${relationship.rows[0]['id']}"/>
            </c:if>
            <sql:update>
                insert into Activity 
                (id,   hardwareId, hardwareRelationshipId, processId, processEdgeid, begin, end,  inNCR, createdBy, creationTS)
                values 
                (NULL, ?,          ?,                      ?,         ?,             NOW(), NULL, ?,     ?,         NOW())
                <sql:param value="${param['hardwareId']}"/>
                <sql:param value="${relationShipId}"/>
                <sql:param value="${param['processId']}"/>
                <sql:param value="${param['processEdgeId']}"/>
                <sql:param value="${param['inNCR']}"/>
                <sql:param value="${userName}"/>
           </sql:update>
           <sql:query var="activity">
               select * from Activity where id=LAST_INSERT_ID()                
           </sql:query>
        </sql:transaction>
        <c:redirect url="displayActivity.jsp">
            <c:param name="activityId" value="${activity.rows[0]['id']}"/>
        </c:redirect>
    </body>
</html>
