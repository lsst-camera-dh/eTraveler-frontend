<%@page contentType="text/html" pageEncoding="US-ASCII"%>
<%@taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<%@taglib prefix="sql" uri="http://java.sun.com/jsp/jstl/sql" %>
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=US-ASCII">
        <title>JSP Page</title>
    </head>
    <body>
        <%
            String hardwareId = request.getParameter("hardwareId");
            String componentId = request.getParameter("componentId");
            String inNCR = request.getParameter("inNCR");
            String processId = request.getParameter("processId");
            String processEdgeId = request.getParameter("processEdgeId");
        %>
<%--        <h1><%=hardwareId%>,  <%=componentId%>, <%=processId%>, <%=processEdgeId%>, <%=inNCR%></h1> --%>
        <sql:query var="process" dataSource="jdbc/rd-lsst-cam">
            select * from Process where id=<%=processId%>
        </sql:query>
        <sql:transaction dataSource="jdbc/rd-lsst-cam">
            <c:choose>
                <c:when test="${! empty param['componentId']}">
            <sql:update>
                insert into HardwareRelationship
                (id,   hardwareId, componentId, begin, end,  hardwareRelationshipTypeId,                       createdBy,     creationTS)
                values
                (null, <%=hardwareId%>,  <%=componentId%>,  null,  null, ${process.rows[0]['hardwareRelationshipTypeId']}, "${userName}", NOW());
            </sql:update>
            <sql:query var="relationship">
                select * from HardwareRelationship where id=LAST_INSERT_ID();
            </sql:query>
            <c:set var="relationShipId" value="${relationship.rows[0]['id']}"/>
                </c:when>
            <c:otherwise>
                <c:set var="relationShipId" value="NULL"/>
            </c:otherwise>
            </c:choose>
            <sql:update>
                insert into Activity 
                (id,   hardwareId, hardwareRelationshipId,        processId,      processEdgeid,      begin, end,  inNCR,        createdBy,      creationTS)
                values 
                (NULL, <%=hardwareId%>,  ${relationShipId}, <%=processId%>, <%=processEdgeId%>, NOW(), NULL, "<%=inNCR%>", "${userName}",  NOW())
           </sql:update>
           <sql:query var="activity">
               select * from Activity where id=LAST_INSERT_ID()                
           </sql:query>
        </sql:transaction>
        <c:redirect url="displayActivity.jsp">
            <c:param name="activityId" value="${activity.rows[0]['id']}"/>
        </c:redirect>
    </body>
</html>
