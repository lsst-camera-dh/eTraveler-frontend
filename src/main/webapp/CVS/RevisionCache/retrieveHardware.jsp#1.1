<%@page contentType="text/html" pageEncoding="US-ASCII"%>
<%@taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<%@taglib prefix="sql" uri="http://java.sun.com/jsp/jstl/sql" %>
<%@taglib prefix="display" uri="http://displaytag.sf.net" %>
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=US-ASCII">
        <title>Retrieve Hardware</title>
    </head>
    <body>
        <h1>Add Some Hardware</h1>
        <sql:query var="hwType" dataSource="jdbc/rd-lsst-cam">
            select * from HardwareType
        </sql:query>
        <sql:query var="idAuth" dataSource="jdbc/rd-lsst-cam">
            select * from HardwareIdentifierAuthority
        </sql:query>
            
    <FORM METHOD=POST ACTION="registerHardware.jsp">
Identifier: <INPUT TYPE=TEXT NAME=identifier SIZE=20>
Type: <select name="typeId">
    <c:forEach var="row" items="${hwType.rows}">
        <option value="${row.id}">${row.name}</option>
    </c:forEach>
    </select>
Identifier Authority: <select name="authId">
    <c:forEach var="row" items="${idAuth.rows}">
        <option value="${row.id}">${row.authorityName}</option>
    </c:forEach>
    </select>
    <INPUT TYPE=SUBMIT value="Add Hardware">
</FORM>
</body>
</html>
