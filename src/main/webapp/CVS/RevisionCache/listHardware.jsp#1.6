<%@page contentType="text/html"%>
<%@taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<%@taglib prefix="sql" uri="http://java.sun.com/jstl/sql" %>
<%@taglib prefix="display" uri="http://displaytag.sf.net" %>
<html>
    <head>
        <title>Hardware List</title>
    </head>
    <body>
        <sql:query var="result" dataSource="jdbc/rd-lsst-cam">
            select H.id, HT.name as hardwareName, HI.identifier, HIA.name as authorityName 
            from HardwareIdentifier HI, Hardware H, HardwareType HT, HardwareIdentifierAuthority HIA  
            where HI.hardwareId=H.id 
            and HT.id=H.typeId 
            and HI.authorityId=HIA.id;
        </sql:query>
        <display:table name="${result.rows}" class="datatable">
            <display:column property="id" title="HardwareId" sortable="true" headerClass="sortable"
                            href="displayHardware.jsp" paramId="hardwareId" paramProperty="id"/>
            <display:column property="hardwareName" title="Type" sortable="true" headerClass="sortable"/>
            <display:column property="identifier" sortable="true" headerClass="sortable"/>
            <display:column property="authorityName" title="IdAuth" sortable="true" headerClass="sortable"/>
        </display:table>
        
    </body>
</html>