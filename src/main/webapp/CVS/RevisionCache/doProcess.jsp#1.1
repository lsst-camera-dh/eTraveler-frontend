<%@page contentType="text/html" pageEncoding="US-ASCII"%>
<%@taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<%@taglib prefix="sql" uri="http://java.sun.com/jsp/jstl/sql" %>
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=US-ASCII">
        <title>Start Something</title>
    </head>
    <body>
        <%
            String processId = request.getParameter("processId");
            String inNCR = request.getParameter("inNCR");
        %>
        <sql:query var="process" dataSource="jdbc/rd-lsst-cam">
           select * from Process where id=<%=processId%>
        </sql:query>
       
        <p>agh</p>
           
        <form METHOD=POST ACTION="createActivity.jsp">
            <input type="hidden" name="processId" value="<%=processId%>"/>
            <input type="hidden" name="inNCR" value="<%=inNCR%>"/>
            
            <sql:query var="hwName" dataSource="jdbc/rd-lsst-cam">
                select name from HardwareType where id=${process.rows[0]['hardwareTypeId1']}
            </sql:query>
            <c:out value="${hwName.rows[0]['name']}:"/>
            <sql:query var="hwId1" dataSource="jdbc/rd-lsst-cam">
                select id from Hardware where TypeId=${process.rows[0]['hardwareTypeId1']}
            </sql:query>
            <select name="hwId1">
                <c:forEach var="row" items="${hwId1.rows}">
                    <option value="${row.id}">${row.id}</option>
                </c:forEach>
            </select>
           
            <c:if test="${! empty process.rows[0]['hardwareTypeId2']}">
               <sql:query var="hwName" dataSource="jdbc/rd-lsst-cam">
                    select name from HardwareType where id=${process.rows[0]['hardwareTypeId2']}
                </sql:query>
                <c:out value="${hwName.rows[0]['name']}:"/>
                <sql:query var="hwId2" dataSource="jdbc/rd-lsst-cam">
                    select id from Hardware where TypeId=${process.rows[0]['hardwareTypeId2']}
                </sql:query>
                <select name="hwId2">
                    <c:forEach var="row" items="${hwId2.rows}" varStatus="status">
                        <option value="${row.id}">${row.id}</option>
                    </c:forEach>
                </select>
            </c:if>
            
            <INPUT TYPE=SUBMIT value="Begin Process">
        </form>
           
    </body>
</html>
