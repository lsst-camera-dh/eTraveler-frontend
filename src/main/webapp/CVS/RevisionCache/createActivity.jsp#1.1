<%@page contentType="text/html" pageEncoding="US-ASCII"%>
<%@taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<%@taglib prefix="sql" uri="http://java.sun.com/jsp/jstl/sql" %>
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=US-ASCII">
        <title>JSP Page</title>
    </head>
    <body>
        <%
            String hwId1 = request.getParameter("hwId1");
            String hwId2 = request.getParameter("hwId2");
            String inNCR = request.getParameter("inNCR");
            String processId = request.getParameter("processId");
            String processEdgeId = request.getParameter("processEdgeId");
        %>
        <sql:update dataSource="jdbc/rd-lsst-cam">
            insert into Activity 
            (id,    hardwareId1,    hardwareId2,    processId,      processEdgeId,      begin,  end,    inNCR,          createdBy,      creationTS)
            values 
            (NULL,  <%=hwId1%>,     <%=hwId2%>,     <%=processId%>, <%=processEdgeId%>, NOW(),  NULL,   "<%=inNCR%>",   "${userName}",  NOW())
        </sql:update>
            <%-- get the new activity id --%>
        <c:redirect url="displayActivity.jsp">
            <c:param name="id" value="<%=hwId1%>"/>
        </c:redirect>
    </body>
</html>
