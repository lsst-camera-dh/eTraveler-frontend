<%@page contentType="text/html" pageEncoding="US-ASCII"%>
<%@taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<%@taglib prefix="sql" uri="http://java.sun.com/jsp/jstl/sql" %>
<%@taglib prefix="display" uri="http://displaytag.sf.net" %>
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=US-ASCII">
        <title>Activity</title>
    </head>
    <body>
        <%
            String activityId = request.getParameter("activityId");
        %>
        <h1>Activity
            <c:out value="<%=activityId%>"/>
        </h1>
        <sql:query var="activity" dataSource="jdbc/rd-lsst-cam">
            select * from Activity where id=<%=activityId%>
        </sql:query>
        <sql:query var="hardware" dataSource="jdbc/rd-lsst-cam">
            select * from Hardware where id=${activity.rows[0]['hardwareId']}
        </sql:query>
        <sql:query var="process" dataSource="jdbc/rd-lsst-cam">
            select * from Process where id=${activity.rows[0]['processId']}
        </sql:query>
        <display:table name="${hardware.rows}" class="datatable">
        </display:table>
        <display:table name="${process.rows}" class="datatable">
        </display:table>
        <display:table name="${activity.rows}" class="datatable">
        </display:table>
            
            <sql:query var="finishedChildren" dataSource="jdbc/rd-lsst-cam">
                select Activity.id, Activity.begin, Activity.end, Process.processName, ProcessEdge.step
                from Activity, Process, ProcessEdge
                where 
                Activity.hardwareId=${activity.rows[0]['hardwareId']}
                AND
           <%--     Activity.processId in (select child from ProcessEdge where parent=${activity.rows[0]['processId']}) --%>
                Activity.processId=ProcessEdge.child
                and
                ProcessEdge.parent=${activity.rows[0]['processId']}
                and
                Activity.processEdgeId=ProcessEdge.id
                AND
                Activity.processId=Process.id
                and 
                Activity.end is not null
                order by step
            </sql:query>
            
            <sql:query var="unFinishedChildren" dataSource="jdbc/rd-lsst-cam">
                select Activity.id, Activity.begin, Process.processName, ProcessEdge.step
                from Activity, Process, ProcessEdge
                where 
                Activity.hardwareId=${activity.rows[0]['hardwareId']}
                AND
                Activity.processId=ProcessEdge.child
                and
                ProcessEdge.parent=${activity.rows[0]['processId']}
                and
                Activity.processEdgeId=ProcessEdge.id
                AND
                Activity.processId=Process.id
                and 
                Activity.end is null
                order by step
            </sql:query>
            
            <sql:query var="unStartedChildren" dataSource="jdbc/rd-lsst-cam">
                select P.id, P.processName, P.hardwareRelationshipTypeId, E.id as processEdgeId, E.step
                from Process P, ProcessEdge E
                where
                P.id in (select child from ProcessEdge where parent=${activity.rows[0]['processId']}) 
                and
                P.id not in (select Activity.processId from Activity, ProcessEdge where 
                                Activity.hardwareId=${activity.rows[0]['hardwareId']}
                                AND
                                Activity.processId=ProcessEdge.child
                                and
                                ProcessEdge.parent=${activity.rows[0]['processId']}
                                and
                                Activity.processEdgeId=ProcessEdge.id)
                and
                E.parent=${activity.rows[0]['processId']}
                and
                P.id=E.child
                order by step
            </sql:query>    
            
            
        <c:if test="${empty activity.rows[0]['end'] and empty unFinishedChildren.rows and empty unStartedChildren.rows}">
            <form METHOD=POST ACTION="closeoutActivity.jsp">
                <input type="hidden" name="activityId" value="<%=activityId%>">       
                <INPUT TYPE=SUBMIT value="Closeout">
            </form>
        </c:if>
            
<%--
        <h2>Child Activities</h2>
        <sql:query var="childActivities" dataSource="jdbc/rd-lsst-cam">
            select Activity.id, Activity.begin, Activity.end, Process.processName
            from Activity, Process
            where 
            Activity.hardwareId=${activity.rows[0]['hardwareId']}
            AND
            Activity.processId in (select child from ProcessEdge where parent=${activity.rows[0]['processId']}) 
            AND
            Process.id=Activity.processId
            order by begin
        </sql:query>
        <display:table name="${childActivities.rows}" class="datatable">
            <display:column property="id" sortable="true" headerClass="sortable"
                            href="displayActivity.jsp" paramId="activityId" paramProperty="id"/>
            <display:column property="processName"/>
            <display:column property="begin"/>
            <display:column property="end"/>
        </display:table>
            
        <h2>Child Processes</h2>
        <sql:query var="childProcesses" dataSource="jdbc/rd-lsst-cam">
            select *
            from Process
            where 
            Process.id in (select child from ProcessEdge where parent=${activity.rows[0]['processId']}) 
        </sql:query>
        <display:table name="${childProcesses.rows}" class="datatable">
            <display:column property="processName" sortable="true" headerClass="sortable"
                            href="initiateChildActivity.jsp" paramId="processId" paramProperty="id"/>
        </display:table>
--%>

        <table border=""1">
            <tr> <th>Link</th> <th>Name</th> <th>Step</th> <th>Begin</th> <th>End</th> </tr>
            
            <c:forEach var="row" items="${finishedChildren.rows}">
                <tr>
                    <td><a href="displayActivity.jsp?activityId=${row.id}">Activity ${row.id}</a></td>
                    <td>${row.processName}</td> <td>${row.step}</td> <td>${row.begin}</td> <td>${row.end}</td>
                </tr>
            </c:forEach>
                
            <c:forEach var="row" items="${unFinishedChildren.rows}">
                <tr>
                    <td><a href="displayActivity.jsp?activityId=${row.id}">Activity ${row.id}</a></td>
                    <td>${row.processName}</td> <td>${row.step}</td> <td>${row.begin}</td> 
                    <td>
                        <c:choose>
                        <c:when test="0">
                        <form METHOD=POST ACTION="closeoutActivity.jsp">
                            <input type="hidden" name="activityId" value="${row.id}">       
                            <INPUT TYPE=SUBMIT value="Closeout">
                         </form>
                            </c:when>
                            <c:otherwise>
                                <a href="displayActivity.jsp?activityId=${row.id}">Needs work</a>
                            </c:otherwise>
                        </c:choose>
                    </td>
                </tr>
            </c:forEach>
                
            <c:forEach var="row" items="${unStartedChildren.rows}" varStatus="status">
                <tr>
                    <td><a href="dumpProcess.jsp?processId=${row.id}">Process ${row.id}</a></td>
                    <td>${row.processName}</td> <td>${row.step}</td> 
                    <td>
                        <c:if test="${status.first && empty unFinishedChildren.rows}">
        <form METHOD=POST ACTION="createChildActivity.jsp">
            <input type="hidden" name="hardwareId" value="${activity.rows[0]['hardwareId']}">       
            <input type="hidden" name="inNCR" value="${activity.rows[0]['inNCR']}">       
            <input type="hidden" name="processId" value="${row.id}">       
            <input type="hidden" name="processEdgeId" value="${row.processEdgeid}">
            
            <c:if test="${! empty row.hardwareRelationshipTypeId}">
               <sql:query var="potentialComponents" dataSource="jdbc/rd-lsst-cam">
                    select Hardware.id, HardwareType.name 
                    from Hardware, HardwareType, HardwareRelationshipType
                    where 
                    HardwareRelationshipType.id=${row.hardwareRelationshipTypeId}
                    and
                    HardwareType.id=HardwareRelationshipType.componentTypeId
                    and
                    Hardware.TypeId=HardwareRelationshipType.componentTypeId
                    and 
                    Hardware.id in (select hardwareId from Activity where end is not null)
                    and
                    Hardware.id not in (select componentId from HardwareRelationship where end is null)
               </sql:query>
                

                <select name="componentId">
                    <c:forEach var="row" items="${potentialComponents.rows}" varStatus="status">
                        <option value="${row.id}">${row.id}</option>
                    </c:forEach>
                </select>
            </c:if>            
            
            <INPUT TYPE=SUBMIT value="Initiate">
        </form>    
            </c:if>
                    </td> 
                    <td></td>
                </tr>
            </c:forEach>
            
        </table>

    </body>
</html>
