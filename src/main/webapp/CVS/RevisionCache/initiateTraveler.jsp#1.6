<%@page contentType="text/html" pageEncoding="US-ASCII"%>
<%@taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<%@taglib prefix="sql" uri="http://java.sun.com/jsp/jstl/sql" %>
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=US-ASCII">
        <title>Initiate Traveler</title>
    </head>
    <body>

        <sql:query var="process" dataSource="jdbc/rd-lsst-cam">
            select * from Process where id=?
            <sql:param value="${param['processId']}"/>
        </sql:query>
        <sql:query var="type" dataSource="jdbc/rd-lsst-cam">
            select * from HardwareType where id=?
            <sql:param value="${process.rows[0]['hardwareTypeId']}"/>
        </sql:query>
       
        <h1>
        Initiating Traveler type 
        &lt;<c:out value="${process.rows[0]['name']}"/>&gt;
        for Hardware type
        &lt;<c:out value="${type.rows[0]['name']}"/>&gt;
        </h1>
        
        <form METHOD=GET ACTION="createTraveler.jsp">
            <input type="hidden" name="processId" value="${param['processId']}"/>
            <input type="hidden" name="inNCR" value="${param['inNCR']}"/>
            <input type="hidden" name="typeId" value="${process.rows[0]['hardwareTypeId']}"/>

            Identifier: 
            <INPUT TYPE=TEXT NAME=identifier SIZE=20>
            
            Identifier Authority: 
            <sql:query var="idAuth" dataSource="jdbc/rd-lsst-cam">
                select * from HardwareIdentifierAuthority
            </sql:query>
            <select name="idAuth">
                <c:forEach var="row" items="${idAuth.rows}">
                    <option value="${row.id}" <c:if test="${! empty sessionScope.siteName and sessionScope.siteName==row.name}">selected</c:if>>${row.name}</option>
                </c:forEach>
            </select>

            <INPUT TYPE=SUBMIT value="Begin Process">
        </form>
    </body>
</html>
