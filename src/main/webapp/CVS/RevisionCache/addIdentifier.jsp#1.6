<%@page contentType="text/html" pageEncoding="US-ASCII"%>
<%@taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<%@taglib prefix="sql" uri="http://java.sun.com/jsp/jstl/sql" %>
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=US-ASCII">
        <title>JSP Page</title>
    </head>
    <body>

        <sql:update dataSource="jdbc/rd-lsst-cam">
            insert into HardwareIdentifier 
            (id,   authorityId, hardwareId, hardwareTypeId, identifier, createdBy, creationTS) values 
            (NULL, ?,           ?,          ?,              ?,          ?,         NOW())
            <sql:param value="${param['authId']}"/>
            <sql:param value="${param['hardwareId']}"/>
            <sql:param value="${param['hardwareTypeId']}"/>
            <sql:param value="${param['identifier']}"/>
            <sql:param value="${userName}"/>
        </sql:update>
        <c:redirect url="displayHardware.jsp">
            <c:param name="hardwareId" value="${param['hardwareId']}"/>
        </c:redirect>
    </body>
</html>
