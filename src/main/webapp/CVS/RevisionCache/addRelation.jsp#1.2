<%@page contentType="text/html" pageEncoding="US-ASCII"%>
<%@taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<%@taglib prefix="sql" uri="http://java.sun.com/jsp/jstl/sql" %>
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=US-ASCII">
        <title>JSP Page</title>
    </head>
    <body>
        <% 
            String hwId1 = request.getParameter("hardwareId1"); 
            String hwId2 = request.getParameter("hardwareId2");
            String typeId = request.getParameter("relationshipTypeId");
        %>
        <sql:update dataSource="jdbc/rd-lsst-cam">
            insert into HardwareRelationship 
            (id, hardwareId1, hardwareId2, begin, end, relationshipTypeId, createdBy, creationTS)
            values (NULL, <%=hwId1%>, <%=hwId2%>, NOW(), NULL, <%=typeId%>, "${userName}", NOW())
        </sql:update>
        <c:redirect url="displayHardware.jsp">
            <c:param name="id" value="<%=hwId1%>"/>
        </c:redirect>
    </body>
</html>
